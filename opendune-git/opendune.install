
post_install() {
  # updates for our .desktop file
  update-desktop-database -q

  echo "Remember you need to be in the audio group and start timidity, eg 'timidity -iA' for music support."
}

post_upgrade() {
  post_install $1
}

post_remove() {
  # updates for our .desktop file
  update-desktop-database -q
}
